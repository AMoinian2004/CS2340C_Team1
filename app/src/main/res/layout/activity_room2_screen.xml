<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen5">

    <TextView
        android:id="@+id/exitArea"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#40FF5733"
        android:gravity="center"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/obstacleView1"
        android:layout_width="272dp"
        android:layout_height="216dp"
        android:background="#40FF5733"
        android:tag="obstacle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/obstacleView2"
        android:layout_width="152dp"
        android:layout_height="251dp"
        android:background="#20FF5733"
        android:tag="obstacle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/characterSprite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="186dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/powerup1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="416dp"
        android:src="@drawable/p1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/powerup2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="86dp"
        android:src="@drawable/p2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/powerup3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/p3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fastEnemy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/mushroom_enemy"
        tools:layout_editor_absoluteX="343dp"
        tools:layout_editor_absoluteY="535dp" />

    <ImageView
        android:id="@+id/slowEnemy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/blue_mushroom_enemy"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="468dp" />

    <ImageView
        android:id="@+id/bigEnemy"
        android:layout_width="128dp"
        android:layout_height="117dp"
        app:srcCompat="@drawable/mushroom_enemy"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="535dp" />

    <ImageView
        android:id="@+id/smallEnemy"
        android:layout_width="47dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/mushroom_enemy"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="468dp" />

    <TextView
        android:id="@+id/powerupMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_bright"
        android:background="@android:color/white"
        android:padding="8dp"
        android:visibility="gone" />

    <include
        layout="@layout/activity_base_screen"
        tools:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>